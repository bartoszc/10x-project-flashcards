---
import Layout from "../layouts/Layout.astro";
import { Button } from "@/components/ui/button";
import {
  Card,
  CardHeader,
  CardTitle,
  CardDescription,
  CardContent,
  CardFooter,
} from "@/components/ui/card";
import { Textarea } from "@/components/ui/textarea";
import { Skeleton } from "@/components/ui/skeleton";
import { Toaster } from "@/components/ui/sonner";
import { toast } from "sonner";

// Kitchen Sink Page for Carbon Design System Components
---

<Layout title="Carbon Design System - Kitchen Sink">
  <div class="min-h-screen bg-background p-8 font-sans text-foreground">
    <header class="mb-12 border-b pb-4">
      <h1 class="text-4xl font-bold tracking-tight">Kitchen Sink</h1>
      <p class="text-muted-foreground mt-2 text-lg">
        Carbon Design System implementation verify
      </p>
    </header>

    <div class="space-y-16">
      {/* Typography Section */}
      <section>
        <h2 class="mb-6 text-2xl font-semibold border-b pb-2">Typography</h2>
        <div class="space-y-4">
          <h1 class="text-4xl font-bold">Heading 1 (4xl Bold)</h1>
          <h2 class="text-3xl font-semibold">Heading 2 (3xl Semibold)</h2>
          <h3 class="text-2xl font-medium">Heading 3 (2xl Medium)</h3>
          <h4 class="text-xl font-medium">Heading 4 (xl Medium)</h4>
          <p class="text-base">
            Body text (base). Lorem ipsum dolor sit amet, consectetur adipiscing
            elit. Sed do eiusmod tempor incididunt ut labore et dolore magna
            aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco
            laboris nisi ut aliquip ex ea commodo consequat.
          </p>
          <p class="text-sm text-muted-foreground">
            Small text (sm text-muted-foreground). Usually used for captions or
            secondary information.
          </p>
        </div>
      </section>

      {/* Buttons Section */}
      <section>
        <h2 class="mb-6 text-2xl font-semibold border-b pb-2">Buttons</h2>
        <div class="flex flex-wrap gap-4 p-4 border border-dashed border-border/50">
          <Button client:visible>Default (Primary)</Button>
          <Button variant="secondary" client:visible>Secondary</Button>
          <Button variant="outline" client:visible>Outline</Button>
          <Button variant="ghost" client:visible>Ghost</Button>
          <Button variant="destructive" client:visible>Destructive</Button>
          <Button variant="link" client:visible>Link</Button>
        </div>
        <div class="mt-4 flex flex-wrap items-center gap-4 p-4 border border-dashed border-border/50">
          <Button size="sm" client:visible>Small</Button>
          <Button size="default" client:visible>Default</Button>
          <Button size="lg" client:visible>Large</Button>
          <Button size="icon" client:visible>
            <span class="size-4 bg-current" />
          </Button>
        </div>
      </section>

      {/* Inputs Section */}
      <section>
        <h2 class="mb-6 text-2xl font-semibold border-b pb-2">Inputs</h2>
        <div class="grid max-w-2xl gap-8">
          <div class="space-y-2">
            <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">
              Textarea (Carbon Style)
            </label>
            <Textarea placeholder="Type something here..." client:visible />
            <p class="text-sm text-muted-foreground">
              Note the bottom border only and custom focus state.
            </p>
          </div>
          <div class="space-y-2">
            <label class="text-sm font-medium leading-none text-destructive">
              Textarea (Error State)
            </label>
            <Textarea
              placeholder="Invalid input..."
              className="aria-invalid:border-destructive"
              aria-invalid="true"
              client:visible
            />
          </div>
        </div>
      </section>

      {/* Cards Section */}
      <section>
        <h2 class="mb-6 text-2xl font-semibold border-b pb-2">Cards (Tiles)</h2>
        <div class="grid gap-6 md:grid-cols-3">
            {/* Standard Card */}
            <Card className="w-full" client:visible>
                <CardHeader>
                    <CardTitle>Card Title</CardTitle>
                    <CardDescription>Card Description</CardDescription>
                </CardHeader>
                <CardContent>
                    <p>Card Content. No border radius, simple border.</p>
                </CardContent>
                <CardFooter>
                    <Button variant="outline" className="w-full" client:visible>Action</Button>
                </CardFooter>
            </Card>

            {/* Interactive Card/Tile */}
             <Card className="w-full bg-muted/50 cursor-pointer hover:bg-muted transition-colors border-l-4 border-l-primary" client:visible>
                <CardHeader>
                    <CardTitle>Interactive Tile</CardTitle>
                    <CardDescription>Clickable surface</CardDescription>
                </CardHeader>
                <CardContent>
                    <p>Simulating a clickable tile with hover effect.</p>
                </CardContent>
            </Card>
        </div>
      </section>

      {/* Feedback Section */}
      <section>
        <h2 class="mb-6 text-2xl font-semibold border-b pb-2">Feedback & Loading</h2>
        <div class="grid gap-8 md:grid-cols-2">
            <div>
                <h3 class="mb-4 text-lg font-medium">Skeleton</h3>
                <div class="flex items-center space-x-4">
                    <Skeleton className="h-12 w-12 rounded-full" client:visible /> {/* Carbon uses circles for avatars sometimes, but mostly squares */}
                    <div class="space-y-2">
                        <Skeleton className="h-4 w-[250px]" client:visible />
                        <Skeleton className="h-4 w-[200px]" client:visible />
                    </div>
                </div>
                 <div class="mt-4 space-y-2">
                    <Skeleton className="h-[125px] w-full" client:visible />
                </div>
            </div>

            <div>
                <h3 class="mb-4 text-lg font-medium">Toast Notifications</h3>
                <div class="flex flex-col gap-2">
                    <Button 
                        onClick={() => toast.success("Operation successful!")}
                        client:visible
                    >
                        Show Success Toast
                    </Button>
                    <Button 
                        variant="secondary"
                        onClick={() => toast.info("Here is some information.")}
                        client:visible
                    >
                        Show Info Toast
                    </Button>
                     <Button 
                        variant="destructive"
                        onClick={() => toast.error("Something went wrong.")}
                        client:visible
                    >
                        Show Error Toast
                    </Button>
                </div>
            </div>
        </div>
      </section>
    </div>
    <Toaster client:load />
  </div>
</Layout>

<script>
    import { toast } from "sonner";
    // Expose toast to window for testing if needed, though buttons handle it.
</script>
